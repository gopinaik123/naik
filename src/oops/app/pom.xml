<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>goopi</groupId>
		<artifactId>goopi.${artifactId}</artifactId>
		<version>1.0-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>
	<groupId>goopi.${artifactId}</groupId>
	<artifactId>goopi.${artifactId}.app</artifactId>
	<packaging>pom</packaging>
	<name>App</name>
	<url>http://www.cybercon.de</url>
	<dependencies>
		<!--the app container has all the shared libraries-->
		<dependency>
			<groupId>org.bndly.common</groupId>
			<artifactId>org.bndly.common.app-container</artifactId>
			<type>zip</type>
			<scope>runtime</scope>
		</dependency>
		<!--here is all the ${artifactId} specific lib-->
		<dependency>
			<groupId>goopi.${artifactId}</groupId>
			<artifactId>goopi.${artifactId}.schema-beans</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>goopi.${artifactId}</groupId>
			<artifactId>goopi.${artifactId}.schema-rest-beans</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>com.h2database</groupId>
			<artifactId>h2</artifactId>
			<version>1.4.190</version>
		</dependency>
	</dependencies>
	<build>
		<finalName>${artifactId}-app-container-${project.version}</finalName>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.4.1</version>
				<executions>
					<execution>
						<id>distro-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<appendAssemblyId>false</appendAssemblyId>
							<descriptors>
								<descriptor>src/assembly/bin.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>local</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<bndly.common.config>${user.home}/.${artifactId}</bndly.common.config>
			</properties>
		</profile>
	</profiles>
</project>
